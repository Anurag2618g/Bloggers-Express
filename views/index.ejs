<%- include("partials/header.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BloggersðŸ”…/home</title>
</head>
<body>

<main class="container">
    <div class="row">
    <div class="col-md-8">
        <% if(locals.titles, locals.contents, locals.timestamp){ %>   
            <% for (let i = 0; i < titles.length; i++) { %>
                <div class="blog-post">
                    <div class="p-2 p-md-3 mb-2 rounded text-body-emphasis bg-body-secondary">
                        <div class="col-lg-12 px-0">
                        <h1 class="display-5 fst-italic left-justify underline"><%= titles[i] %></h1>
                        <hr>
                        <p class="lead my-3 left-justify"><%= contents[i] %></p>
                        <p class="text-muted left-justify"><%= timestamp[i] %></p>
                        </div>
                    </div>
                </div>
            <% } %>  
        <% } %> 
    </div>
    
    <div class="col-md-4">
        <div class="form-container"> 
        <div class="p-2 p-md-3 mb-2 rounded text-body-emphasis bg-body-secondary">
            <h2>My Posts</h2>
            <hr>
            <% for(let j=0; j<titles.length; j++) { %>
            <form action="/delete" method="POST">
                <input type="hidden" name="index" value="<%= j %>">
                <div class="mb-3">
                    <p class="lead my-3 left-justify"><%= titles[j] %></p>
                </div>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <hr>
            <% } %>
        </div>
        </div>
    </div>
</div>
</main>
</body>
</html>

